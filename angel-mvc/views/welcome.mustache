<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to IPT10</title>

    <!-- Pico CSS for styling -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css"
    >
</head>
<body>

    <!-- Main Container -->
    <main class="container">
        <h1>Welcome to IPT10</h1>

        <!-- User Data Table -->
        <table>
            <thead>
                <tr>
                    <th>User ID</th>
                    <th>Username</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                {{#data}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{username}}</td>
                    <td>{{first_name}}</td>
                    <td>{{last_name}}</td>
                    <td>{{email}}</td>
                </tr>
                {{/data}}
            </tbody>
        </table>

        <!-- Logout Button -->
        <a href="/logout" role="button" class="contrast">Logout</a>
    </main>

</body>
</html>
